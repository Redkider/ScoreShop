
._div,
scroll-view,
swiper {
	box-sizing: border-box;
}
.rf-tab {
    white-space: nowrap;
}
.rf-tab-item {
    height: 90rpx;
    display: inline-block;
    line-height: 90rpx;
    margin: 0 0rpx;
    padding: 0 20rpx;
	width: 50%;
}
.rf-tab-item.cur {
    border-bottom: 4rpx solid;
}
.rf-tab.fixed {
	position: fixed;
	width: 100%;
	top: 0;
	z-index: 1024;
	box-shadow: 0 1rpx 6rpx rgba(0, 0, 0, 0.1);
}
.flex {
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
}
.text-center {
    text-align: center;
}
.flex-sub {
    -webkit-box-flex: 1;
    -webkit-flex: 1;
            flex: 1;
}
